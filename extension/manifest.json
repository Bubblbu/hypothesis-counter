{
    "manifest_version": 2,
    "name": "Hypothesis Annotation Count",
    "version": "0.1",
    "description": "Displays the number of annotations for the current webpage",

    "background": {
      "scripts": ["background.js"]
    },

    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Hypothesis Annotation Count"
    },
    
    "permissions": [
        "https://hypothes.is/api/search*",
        "webRequest", "activeTab", "tabs"
    ]
  }